---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Services from "~/components/widgets/Services.astro";
import Content from "~/components/widgets/Content.astro";
import BlogLatestPosts from "~/components/widgets/BlogLatestPosts.astro";
import FAQs from "~/components/widgets/FAQs.astro";
import Stats from "~/components/widgets/Stats.astro";
import CallToAction from "~/components/widgets/CallToAction.astro";

const metadata = {
  title: "Let's build your website together. You're in good hands.",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: "primary",
        text: "Build Your Digital Product",
        href: "/services",
        icon: "tabler:rocket",
      },
      {
        text: "Start Your Coding Journey",
        href: "/courses",
        icon: "tabler:school",
      },
    ]}
    image={{
      src: "~/assets/images/hero-image-1.png",
      alt: "Fishtail Code - Innovation and Education",
    }}
  >
    <Fragment slot="title">
      <span
        class="block text-blue-600 dark:text-blue-400 text-xl font-bold tracking-wide uppercase mb-2"
      >
        Software Services & IT Academy
      </span>
      We Build Future Tech. <br class="hidden lg:inline" />
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 via-purple-700 to-pink-600 dark:from-blue-400 dark:via-purple-400 dark:to-pink-400"
      >
        We Train Future Leaders.
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Your trusted partner for <strong
          >enterprise-grade software development</strong
        > and <strong>industry-standard IT training</strong>. Whether you need a
        scalable application or a career transformation, we deliver excellence.
      </span>
    </Fragment>
  </Hero>
  <!-- Features Widget *************** -->

  <Features2
    id="features"
    title="The Fishtail Ecosystem"
    subtitle="Bridging the gap between professional software engineering and practical education."
    items={[
      {
        title: "For Businesses",
        description:
          "We engineer high-performance websites, mobile apps, and SaaS platforms that scale with your growth.",
        icon: "tabler:briefcase",
        callToAction: {
          text: "Explore Services",
          href: "/services",
        },
      },
      {
        title: "For Students",
        description:
          "Learn by doing. Our project-based curriculum prepares you for the real demands of the tech industry.",
        icon: "tabler:school",
        callToAction: {
          text: "View Courses",
          href: "/courses",
        },
      },
      {
        title: "Modern Tech Stack",
        description:
          "We use and teach the latest technologies: React, Next.js, Python, Flutter, and Cloud Infrastructure.",
        icon: "tabler:stack-2",
      },
      {
        title: "Expert Mentorship",
        description:
          "Gain insights from working professionals who guide you through code reviews and career advice.",
        icon: "tabler:users",
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-900">
        <div
          class="absolute inset-0 bg-gradient-to-br from-transparent to-blue-100 dark:to-slate-800"
        >
        </div>
      </div>
    </Fragment>
  </Features2>

  <!-- Services Widget *************** -->
  <Services
    id="services"
    tagline="Our Expertise"
    title="Comprehensive Digital Solutions"
    subtitle="From concept to code, we deliver products that drive business growth."
    services={[
      {
        title: "Custom Web Development",
        description:
          "Blazing-fast, SEO-optimized websites built with modern tech (Astro, React, Next.js) designed to convert visitors into customers.",
        icon: "tabler:browser",
        features: ["High Performance", "SEO Optimized", "Responsive Design"],
      },
      {
        title: "Mobile App Development",
        description:
          "Native-performance cross-platform mobile applications (iOS & Android) using Flutter and React Native.",
        icon: "tabler:device-mobile",
        features: ["iOS & Android", "Cross-Platform", "User Centric"],
      },
      {
        title: "UI/UX Design",
        description:
          "Intuitive, accessible, and beautiful user interfaces backed by research to ensure a seamless user journey.",
        icon: "tabler:palette",
        features: ["User Research", "Wireframing", "Prototyping"],
      },
      {
        title: "E-Commerce Solutions",
        description:
          "Secure, scalable online stores with seamless payment integration designed to maximize sales and manage inventory easily.",
        icon: "tabler:shopping-cart",
        features: [
          "Payment Gateways",
          "Inventory Management",
          "Secure Checkout",
        ],
      },
    ]}
  />

  <!-- Training/Academy Section ************** -->
  <!-- Training/Academy Section ************** -->
  <Content
    id="academy"
    isReversed
    tagline="Fishtail Academy"
    title="Master the Art of Coding"
    items={[
      {
        title: "Project-Based Curriculum",
        description:
          "Learn by building real applications. No boring theory—just practical, hands-on coding experience.",
      },
      {
        title: "Industry-Standard Tools",
        description:
          "We teach what the industry uses: Git, Docker, Cloud, and modern frameworks.",
      },
      {
        title: "Career Support",
        description:
          "From resume building to mock interviews, we help you land your dream job in tech.",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80",
      alt: "Students learning to code",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        Launch Your Tech Career
      </h3>
      <p class="text-lg text-muted dark:text-slate-400">
        Join our intensive bootcamps and courses designed to turn beginners into
        professional developers.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-900">
        <div
          class="absolute inset-0 bg-gradient-to-tr from-blue-100/50 to-purple-100/50 dark:from-slate-800 dark:to-slate-900"
        >
        </div>
      </div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Tech Stack"
    title="Innovation Powered by Modern Technology"
    items={[
      {
        title: "State-of-the-Art Frontend",
        description:
          "We build (and teach) using React, Next.js, and Astro. This ensures your applications are blazing fast, SEO-friendly, and offer an incredible user experience.",
      },
      {
        title: "Scalable Backend & Cloud",
        description:
          "Reliability is key. We leverage Python, Node.js, and AWS/Azure cloud infrastructure to ensure your systems can handle growth without breaking a sweat.",
      },
      {
        title: "Cross-Platform Mobile",
        description:
          "Reach users everywhere. We specialize in Flutter and React Native, allowing you to launch high-quality apps on both iOS and Android from a single codebase.",
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1555099962-4199c345e5dd?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80",
      alt: "Fishtail Code Developer working on modern code stack",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        We Speak the Language of <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600"
          >Future Tech.</span
        >
      </h3>
      <p class="text-lg text-muted dark:text-slate-400">
        At Fishtail Code, we don't rely on outdated tools. Whether we are
        building your product or training your future career, we stick to the <strong
          >cutting edge</strong
        >.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: "Strategic UI/UX Design",
        description: `We don't just design for looks; we design for behavior. Every layout is crafted to guide your visitors toward making a purchase or contacting you.`,
      },
      {
        title: "Mobile-First Architecture",
        description:
          "With over 60% of traffic coming from mobile, we build for smaller screens first, ensuring a flawless experience on phones, tablets, and desktops.",
      },
      {
        title: "Future-Proof Solutions",
        description:
          "We continuously refine and update your website so it stays aligned with the latest trends, technologies, and user expectations.",
      },
      {
        title: "Ongoing Support",
        description: `We provide reliable guidance and assistance whenever you need it — ensuring you’re never alone on your digital journey.`,
      },
    ]}
    image={{
      src: "https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2194&q=80",
      alt: "Tech Fytra UI/UX Design Process",
    }}
  >
    <Fragment slot="content">
      <h3
        class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
      >
        Design That <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-blue-600"
          >Captivates & Converts.</span
        >
      </h3>
      <p class="text-lg text-muted dark:text-slate-400">
        A great website needs more than just clean code. It needs a soul. We
        craft digital experiences that look stunning and perform perfectly.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore Our Insights & Tips"
    information={`
    Stay updated with the latest trends, tips, and best practices in web design, digital marketing, and business growth.
    Each article is designed to help you make smarter decisions, improve your online presence, and grow your brand.
    Learn actionable strategies from our experts to create a website that not only looks great but delivers results.
  `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to the most common questions about our website design and development services."
    tagline="FAQs"
    classes={{ container: "max-w-6xl" }}
    items={[
      {
        title: "Why should I choose your company for my website?",
        description:
          "We combine modern technology, creative design, and marketing-focused strategies to build websites that not only look great but drive results for your business.",
      },
      {
        title: "What do I need to get started?",
        description:
          "Just share your brand details, goals, and any existing content or ideas. We guide you through the rest, making the process smooth and stress-free.",
      },
      {
        title: "How long does it take to launch a website?",
        description:
          "Depending on the complexity, most websites are designed, developed, and launched within 4–6 weeks. We ensure quality without unnecessary delays.",
      },
      {
        title: "Can I update my website myself after launch?",
        description:
          "Absolutely! We build websites with easy-to-use CMS solutions or provide training, so you can manage content, images, and pages on your own.",
      },
      {
        title: "Do you provide ongoing support?",
        description:
          "Yes, we offer maintenance and support packages to keep your website secure, up-to-date, and performing optimally.",
      },
      {
        title: "Will my website be optimized for search engines?",
        description:
          "Every website we build follows SEO best practices, ensuring better visibility, faster load times, and higher chances of ranking well on Google.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: "Websites Delivered", amount: "150+" },
      { title: "Happy Clients", amount: "120+" },
      { title: "Years of Experience", amount: "4+" },
      { title: "Industries Served", amount: "20+" },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: "primary",
        text: "Start Your Project",
        href: "/contact",
        icon: "tabler:rocket",
      },
    ]}
  >
    <Fragment slot="title"> Launch Your Dream Website Today </Fragment>

    <Fragment slot="subtitle">
      Work with our expert team to create a stunning, responsive, and
      high-performing website tailored to your business goals. Get started now
      and see your online presence come to life.
    </Fragment>
  </CallToAction>
</Layout>
